<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/week_view_main_holder"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_black"
              android:orientation="vertical"
              android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="36dp">


        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/icon_with_16dp"
                android:layout_height="@dimen/icon_with_16dp"
                android:layout_marginEnd="@dimen/padding_8dp"
                android:src="@drawable/ic_back_date"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date_time"
                style="@style/Regular_H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_white"
                android:text="May 22 - May 28, 2019"
        />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/icon_with_16dp"
                android:layout_height="@dimen/icon_with_16dp"
                android:layout_marginStart="@dimen/padding_8dp"
                android:src="@drawable/ic_next_date"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.app.avy.ui.view.MyViewPager
            android:id="@+id/week_view_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />
</LinearLayout>
