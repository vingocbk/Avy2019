<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/color_black"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_height="match_parent">


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/Regular_H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_white"
                android:textAllCaps="true"
                android:gravity="center|left"
                android:padding="@dimen/padding_8dp"
                android:layout_margin="@dimen/padding_16dp"
                android:text="@string/txt_cabin_type"/>

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/Regular_H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_white"
                android:textAllCaps="true"
                android:gravity="center|left"
                android:layout_margin="@dimen/padding_16dp"
                android:padding="@dimen/padding_8dp"
                android:text="@string/txt_cabin_count"/>

        <androidx.appcompat.widget.AppCompatTextView
                style="@style/Regular_H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_white"
                android:textAllCaps="true"
                android:gravity="center|left"
                android:padding="@dimen/padding_8dp"
                android:layout_margin="@dimen/padding_16dp"
                android:text="@string/txt_cabin_control"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">


        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_16dp"
                android:background="@drawable/bg_border">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinner_type"
                    android:layout_width="@dimen/with_170dp"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="none"
                    android:background="@null"
                    app:met_hideUnderline="true"
                    android:textColor="@android:color/transparent"
                    android:textColorHint="@android:color/transparent"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="Lady"
            />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_16dp"
                android:background="@drawable/bg_border">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinner_count_cabinet"
                    android:layout_width="@dimen/with_170dp"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="none"
                    android:background="@null"
                    app:met_hideUnderline="true"
                    android:text="30"
                    android:textColor="@android:color/transparent"
                    android:textColorHint="@android:color/transparent"
                    android:gravity="center"
            />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_16dp"
                android:background="@drawable/bg_border">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinner_count_control"
                    android:layout_width="@dimen/with_170dp"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="none"
                    android:background="@null"
                    app:met_hideUnderline="true"
                    android:text="30"
                    android:textColor="@android:color/transparent"
                    android:textColorHint="@android:color/transparent"
                    android:gravity="center"
            />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/Regular_H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_white"
                android:textAllCaps="true"
                android:layout_margin="@dimen/padding_16dp"
                android:gravity="center|left"
                android:padding="@dimen/padding_8dp"
                android:text="@string/txt_volume"/>


        <androidx.appcompat.widget.AppCompatTextView
                style="@style/Regular_H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_white"
                android:gravity="center|left"
                android:textAllCaps="true"
                android:padding="@dimen/padding_8dp"
                android:layout_margin="@dimen/padding_16dp"
                android:text="@string/txt_language"/>


        <androidx.appcompat.widget.AppCompatTextView
                style="@style/Regular_H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_white"
                android:gravity="center|left"
                android:layout_margin="@dimen/padding_16dp"
                android:textAllCaps="true"
                android:padding="@dimen/padding_8dp"
                android:text="@string/txt_setting_advanced"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


        <SeekBar
                android:id="@+id/seek_bar_volume"
                android:layout_width="@dimen/with_170dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_16dp"
                android:progress="50"
                style="@style/MySeekBar"
                android:thumb="@drawable/custom_thumb"
        />


        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_16dp"
                android:background="@drawable/bg_border">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinner_language"
                    android:layout_width="@dimen/with_170dp"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="none"
                    android:background="@null"
                    app:met_hideUnderline="true"
                    android:text="Tiếng việt"
                    android:textAllCaps="true"
                    android:textColor="@android:color/transparent"
                    android:textColorHint="@android:color/transparent"
                    android:gravity="center"
            />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_setting_advanced"
                style="@style/Regular_H6"
                android:layout_width="@dimen/with_170dp"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_black"
                android:textAllCaps="true"
                android:gravity="center"
                android:padding="@dimen/padding_8dp"
                android:layout_margin="@dimen/padding_16dp"
                android:background="@drawable/bg_border"
                android:text="open"
        />


    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>