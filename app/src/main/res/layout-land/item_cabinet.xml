<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="@dimen/with_150dp"
                android:background="@drawable/ic_border"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/padding_18dp"
                android:layout_marginTop="@dimen/padding_18dp">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_8dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/padding_4dp"
            android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/ic_circle_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_count"
                style="@style/Bold_H5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_black"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                tools:text="1"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/Bold_H6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:paddingStart="@dimen/padding_16dp"
            android:textColor="@color/md_grey_white"
            android:layout_centerInParent="true"
            android:text="View"/>


</RelativeLayout>

