<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_16dp"
        android:gravity="center">


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="3">

        <EditText
                android:id="@+id/edit_key"
                style="@style/Regular_H4"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_border"
                android:layout_margin="@dimen/padding_8dp"
                android:textColorHint="@color/md_grey"
                android:hint="@string/txt_hotkey"
                android:textColor="@color/md_grey_white"
                android:paddingTop="@dimen/padding_6dp"
                android:paddingBottom="@dimen/padding_6dp"
                android:maxLines="1"
                android:lines="1"
                android:gravity="center"
                android:ellipsize="end"
                tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="3">

        <RelativeLayout
                android:id="@+id/layout_select"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/ic_border"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select"
                    style="@style/Regular_H4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_select"
                    android:textColor="@color/md_grey_white"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_6dp"
                    android:paddingBottom="@dimen/padding_6dp"
                    android:visibility="visible"
                    android:textAllCaps="true"/>


            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/padding_8dp"
                    android:src="@drawable/ic_expand_more_black_24dp"/>


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/nice_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="none"
                    android:background="@null"
                    android:textColor="@android:color/transparent"
                    android:textColorHint="@android:color/transparent"
                    android:gravity="center"
            />
        </RelativeLayout>


    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="3">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_view"
                style="@style/Regular_H4"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_border"
                android:text="@string/txt_view"
                android:textColor="@color/md_grey_white"
                android:gravity="center"
                android:paddingTop="@dimen/padding_6dp"
                android:paddingBottom="@dimen/padding_6dp"
                android:textAllCaps="true"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">


        <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/icon_with_48dp"
                android:layout_height="@dimen/icon_with_48dp"
                android:scaleX="1.7"
                android:scaleY="1.7"
                android:gravity="center"
                android:theme="@style/CheckBoxTheme"
                android:checked="true"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>