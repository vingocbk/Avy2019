<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_main" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/md_grey_black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Spinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/md_grey_white</item>
        <item name="android:progressTint">@color/color_control</item>
<!--
        <item name="android:colorControlActivated">#c51162</item>
-->
    </style>

    <string name="unknown">Unknown</string>
    <string name="service_name">Audio remote control service</string>

    <style name="SpinnerDialog" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">#ff00ff</item>
        <item name="colorPrimary">#ff00ff</item>
        <item name="colorPrimaryDark">#ffff00</item>
        <item name="colorAccent">#ff0000</item>
    </style>

